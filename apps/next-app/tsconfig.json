{
  "extends": "@mj/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": [
        "src/components/pages/*"
      ],
      "@ui/*": [
        "src/components/ui/*"
      ],
      "@layouts/*": [
        "src/components/layouts/*"
      ],
      "@utils/*": [
        "src/components/utils/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@server/*": [
        "src/server/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
